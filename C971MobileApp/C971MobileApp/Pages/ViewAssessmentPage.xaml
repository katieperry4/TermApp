<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C971MobileApp.Pages.ViewAssessmentPage"
             Title="View Assessment">
    <VerticalStackLayout>

        <HorizontalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Margin="0,20,0,10">
            <Label x:Name="AssessmentNameLabel" Text="Term Not Found"
           FontSize="Large"
           Margin="0,0,20,0"
           VerticalOptions="Center"
           />
            <Button Text="..."
                CornerRadius="100"
                x:Name="EditAssessmentButton"
                Clicked="EditAssessmentButton_Clicked"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="20,20,20,0"
        HorizontalOptions="Center">
            <Label x:Name="StartDateLabel" Text="00/0000" TextColor="Grey"/>
            <Label x:Name="HyphenLabel" Text=" - " TextColor="Grey"/>
            <Label x:Name="EndDateLabel" Text="00/0000" TextColor="Grey"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout  Margin="20,20,20,0" HorizontalOptions="Center">
            <Label Text="Notifications: "/>
            <Label x:Name="NotifLabel"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>